<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="360dp"
            android:layout_height="142dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"
            android:textColor="@color/design_default_color_primary_dark" app:layout_constraintVertical_bias="0.43"
            android:id="@+id/textView3" app:layout_constraintHorizontal_bias="0.411"/>
    <TextView
            android:layout_width="336dp"
            android:layout_height="163dp"
            android:text="Calculate Your Age in Minutes!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="48sp"
            android:textColor="@color/design_default_color_primary_dark" app:layout_constraintVertical_bias="0.064"
            android:id="@+id/textView" app:layout_constraintHorizontal_bias="0.442"/>
    <Button
            android:layout_width="197dp"
            android:layout_height="54dp" android:id="@+id/button2"
            android:text="Select a Date" android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.709" app:layout_constraintHorizontal_bias="0.448"/>

</androidx.constraintlayout.widget.ConstraintLayout>